@model Dj_ReedRussel.Models.music

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Edit</h2>

@Html.AntiForgeryToken()
@using (Html.BeginForm("Edit", "musics", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>music</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.music_cover, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input id="image" type="image" src="~/Uploads/@Html.DisplayFor(model => model.music_cover)" width="100" style="margin-bottom:10px;" />
                <input type="hidden" name="oldfile" value="@Html.DisplayFor(model => model.music_cover)" />
                @Html.EditorFor(model => model.music_cover, new { htmlAttributes = new { @class = "form-border", @type = "file" } })
                @Html.ValidationMessageFor(model => model.music_cover, "", new { @class = "text-danger" })
                @if (ViewBag.Message != null)
                {
                    <p class="text-danger">@ViewBag.Message</p>
                }
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.music_info, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.music_info, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.music_info, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.music_types_id, "music_types_id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("music_types_id", null, htmlAttributes: new { @class = "" })
                @Html.ValidationMessageFor(model => model.music_types_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.music_src, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input id="image" type="image" src="~/Uploads/@Html.DisplayFor(model => model.music_src)" width="100" style="margin-bottom:10px;" />
                <input type="hidden" name="oldfile1" value="@Html.DisplayFor(model => model.music_src)" />
                @Html.EditorFor(model => model.music_src, new { htmlAttributes = new { @class = "form-border", @type = "file" } })
                @Html.ValidationMessageFor(model => model.music_src, "", new { @class = "text-danger" })
                @if (ViewBag.Message != null)
                {
                    <p class="text-danger">@ViewBag.Message</p>
                }
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
